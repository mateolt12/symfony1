     <title>Benvido!</title>
  {% block stylesheets %}
     <!-- Bootstrap Core CSS -->
     <link href={{asset('css/bootstrap.min.css')}} type="text/css" rel="stylesheet" >
     <link href={{asset('css/bootstrap-theme.min.css')}} type="text/css" rel="stylesheet" >
 
     <!-- MetisMenu CSS -->
     <link href={{asset('css/metisMenu/metisMenu.min.css')}} type="text/css" rel="stylesheet" >
 
     <!-- Custom Fonts -->
